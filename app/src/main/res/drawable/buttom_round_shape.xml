<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dip" android:color="#0DECC2" />
            <gradient android:angle="-90" android:startColor="#10E8C5" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dip" android:color="#63A196" />
            <solid android:color="#1DE8C8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dip" android:color="#47CC5B" />
            <gradient android:angle="-90" android:startColor="#1CEFCE" android:endColor="#1DE897" />
        </shape>
    </item>
</selector>
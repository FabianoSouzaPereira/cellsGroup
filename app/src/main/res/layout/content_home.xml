<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:weightSum="10"
    tools:context=".home.HomeActivity"
    tools:ignore="MissingDefaultResource"
    tools:showIn="@layout/app_bar_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="9dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingTop="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_celula"
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardcellClick"
                    android:padding="8dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgcelulaligacao"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="top"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/celula"
                        app:srcCompat="@drawable/ic_baseline_groups_24" />

                    <TextView
                        android:id="@+id/tvcardCelulas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/c_lulas"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardrelatorioClick"
                    android:padding="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgrelatorio"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/relat_rios"
                        app:srcCompat="@drawable/ic_baseline_menu_book_24_yellow" />

                    <TextView
                        android:id="@+id/tvcardRelatorios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/relat_rios"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardintercessaoClick"
                    android:padding="20dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgintercesao"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/Intersession"
                        android:src="@drawable/ic_baseline_sports_kabaddi_24_yellow" />

                    <TextView
                        android:id="@+id/tvcardIntercesÃ£o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/Intersession"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardagendaClick"
                    android:padding="20dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgagenda"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/agenda"
                        android:src="@drawable/ic_baseline_menu_book_24_yellow" />

                    <TextView
                        android:id="@+id/tvcardAgenda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/Schedule"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardleaderClick"
                    android:padding="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgleaders"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal|top"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/lideres"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        app:srcCompat="@drawable/ic_baseline_engineering_24" />

                    <TextView
                        android:id="@+id/tvcardLeaders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/lideres"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardcontatoClick"
                    android:padding="15dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgContato"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="top"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/contato"
                        app:srcCompat="@drawable/ic_baseline_phone_24_yellow" />

                    <TextView
                        android:id="@+id/tvcardBatismo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/contato"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:onClick="cardigrejaClick"
                    android:padding="20dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/imgIgreja"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="top"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/igreja"
                        app:srcCompat="@drawable/ic_baseline_account_balance_24"
                        app:tint="#000000" />

                    <TextView
                        android:id="@+id/tvcardIgreja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/igreja"
                        android:textColor="#9CC1CA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

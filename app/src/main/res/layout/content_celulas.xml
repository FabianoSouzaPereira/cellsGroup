<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    android:weightSum="10"
    tools:context=".celulas.CelulasActivity"
    tools:ignore="MissingDefaultResource"
    tools:showIn="@layout/app_bar_celulas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/listViewCelula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:visibility="visible">

        </ListView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewCells"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="80dp"
                android:contentDescription="@string/sem_celula"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_baseline_groups_24_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="@string/messageCelula"
                android:textColor="#373737"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="230dp"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="@string/messageCelula2"
                android:textColor="#373737"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>